<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FragmentApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#283593</item> <!-- Темно-синий -->
        <item name="colorPrimaryVariant">#1A237E</item> <!-- Ещё темнее -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Белый для текста -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#039BE5</item> <!-- Голубой -->
        <item name="colorSecondaryVariant">#0288D1</item> <!-- Чуть темнее голубой -->
        <item name="colorOnSecondary">#FFFFFF</item> <!-- Белый для текста -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background color. -->
        <item name="android:colorBackground">#F5F5F5</item> <!-- Светлый серый -->

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">#1A237E</item>
    </style>
</resources>
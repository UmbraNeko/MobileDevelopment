<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/item_background"
    android:gravity="center_vertical">

    <!-- Аватар пользователя -->
    <ImageView
        android:id="@+id/iv_request_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_avatar_placeholder"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp" />

    <!-- Контейнер с текстовой информацией -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Имя -->
        <TextView
            android:id="@+id/tv_request_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя: Mbappe"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Возраст -->
        <TextView
            android:id="@+id/tv_request_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Возраст: 56"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Статус -->
        <TextView
            android:id="@+id/tv_request_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Статус: Football is my life!"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textStyle="italic" />
    </LinearLayout>

    <!-- Кнопка добавления -->
    <ImageButton
        android:id="@+id/btn_add_friend"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_add"
        android:background="@null"
        app:tint="@android:color/black" />
</LinearLayout>
